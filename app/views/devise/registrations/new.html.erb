<% content_for :head do %>
  <% stylesheet_link_tag "navbar", "default-style" %>
<% end %>

<div class="container">

  <%= render partial: "shared/navbar", locals: {current_page: "login"} %>

  <div class="flex justify-center items-center">

    <div>
      <h2 class="text-5xl font-bold flex justify-center items-center pb-5 text-gray-700">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <div class="mb-2 mt-4">
            <%= f.label :email %>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-lg", style: "height:2em; width:25rem;" %>
        </div>

        <div class="field">
          <div class="mb-2 mt-4">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class: "text-lg", style: "height:2em;  width:25rem;" %>
        </div>

        <div class="field">
          <div class="mb-2 mt-4">
            <%= f.label :password_confirmation %>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-lg", style: "height:2em; width:25rem;" %>
        </div>

        <div class="actions flex justify-center items-center p-4 mt-7 mb-3 cursor-pointer green-button text-white">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <div class="text-gray-500">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

</div>